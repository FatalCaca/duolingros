{% trans_default_domain 'FOSUserBundle' %}

<div class="box">
    <div class="box-body">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>{{ 'profile.show.username'|trans }}</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'profile.show.email'|trans }}</th>
                        <td>{{ user.email }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row no-print">
            <div class="col-xs-12">
                <a href="{{ url('fos_user_profile_edit') }}" class="btn btn-primary"><i class="fa fa-edit"></i> Editer</a>
                <a href="{{ url('fos_user_change_password') }}" class="btn btn-primary"><i class="fa fa-lock"></i> Changer le mot de passe</a>
            </div>
        </div>
    </div>
</div>
