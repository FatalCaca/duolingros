<div class="book-lesson-element">
  <h1>
    {{ bookLesson.title }}
  </h1>
  <h2>
    {{ bookLesson.subtitle }}
  </h2>
  <div class="lesson-list">
    {% for lesson in bookLesson.lessonList %}
      <a class="lesson-element"
           href="{{ path('front_study_action', {'lesson': lesson.id}) }}"
           id="lesson-{{ lesson.id }}"
           >
          {{ lesson.title }}

        {% if lesson.currentLearning is not null %}
          {% if lesson.currentLearning.hotness >= 3 %}
            <i class="fas fa-star hotness-indicator"></i>
            <i class="fas fa-star hotness-indicator"></i>
            <i class="fas fa-star hotness-indicator"></i>
          {% elseif lesson.currentLearning.hotness >= 2 %}
            <i class="far fa-star hotness-indicator"></i>
            <i class="fas fa-star hotness-indicator"></i>
            <i class="fas fa-star hotness-indicator"></i>
          {% else %}
            <i class="far fa-star hotness-indicator"></i>
            <i class="far fa-star hotness-indicator"></i>
            <i class="far fa-star hotness-indicator"></i>
          {% endif %}
        {% endif %}
        </a>
    {% endfor %}
  </div>
</div>
